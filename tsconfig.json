{
  "compilerOptions": {
    "target": "es2017",
    "module": "es2020",
    "outDir": "build",
    "lib": [
      "es2020",
      "dom"
    ],
    "sourceMap": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "dist",
    "strictPropertyInitialization": false,
    "strict": true,
    "types": ["node"],
    "esModuleInterop": true,
  },
  "include": [
    "src/**/*.ts"
  ],
  "ts-node": {
    "esm": true
  }
}
